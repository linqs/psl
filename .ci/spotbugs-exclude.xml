<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
            xmlns="https://github.com/spotbugs/filter/3.0.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <Match>
        <Bug pattern="EI_EXPOSE_REP" />
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>

    <Match>
        <!-- Note that the reports we want to ignore occur in anynonymous classes, so we need a regex. -->
        <Class name="~org.linqs.psl.application.learning.weight.maxlikelihood.MaxPiecewisePseudoLikelihood\$\d+" />
        <Bug pattern="DMI_RANDOM_USED_ONLY_ONCE" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.application.learning.weight.search.bayesian.SquaredExpKernel" />
        <Method name="kernel" />
        <Bug pattern="RV_RETURN_VALUE_IGNORED_INFERRED" />
    </Match>

    <!-- These checks come from working directly from System.out (which we cannot set an encoding for at this point). -->
    <Match>
        <Class name="org.linqs.psl.cli.Launcher" />
        <Method name="outputGroundRules" />
        <Or>
            <Bug pattern="DM_DEFAULT_ENCODING" />
            <Bug pattern="OS_OPEN_STREAM" />
        </Or>
    </Match>

    <Match>
        <Class name="org.linqs.psl.database.rdbms.PredicateInfo" />
        <Bug pattern="SQL_NONCONSTANT_STRING_PASSED_TO_EXECUTE" />
    </Match>

    <Match>
        <Class name="~org.linqs.psl.database.rdbms.driver..*Driver" />
        <Bug pattern="SQL_PREPARED_STATEMENT_GENERATED_FROM_NONCONSTANT_STRING" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.evaluation.statistics.AUCEvaluator" />
        <Method name="getLabel" />
        <Bug pattern="NP_BOOLEAN_RETURN_NULL" />
    </Match>

    <!-- Ignore all files generated by antlr. -->
    <Match>
        <Package name="org.linqs.psl.parser.antlr" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.reasoner.admm.ADMMReasoner" />
        <Or>
            <Field name="AxNorm" />
            <Field name="AyNorm" />
            <Field name="BzNorm" />
            <Field name="lagrangePenalty" />
            <Field name="augmentedLagrangePenalty" />
        </Or>
        <Bug pattern="IS2_INCONSISTENT_SYNC" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.reasoner.term.MemoryVariableTermStore" />
        <Method name="updateModelAtoms" />
        <Bug pattern="WMI_WRONG_MAP_ITERATOR" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.reasoner.term.MemoryConsensusTermStore" />
        <Field name="numLocalVariables" />
        <Bug pattern="IS2_INCONSISTENT_SYNC" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.reasoner.term.streaming.StreamingTermStore" />
        <Or>
            <Field name="numObservedAtoms" />
            <Field name="numRandomVariableAtoms" />
        </Or>
        <Bug pattern="IS2_INCONSISTENT_SYNC" />
    </Match>

    <Match>
        <Class name="org.linqs.psl.util.RandUtils" />
        <Bug pattern="DMI_RANDOM_USED_ONLY_ONCE" />
    </Match>

    <!-- Rules explicitly define their hashcode to be the rules' identity hash code (object id). Rules are generally meant to be created once. -->
    <Match>
        <Class name="~org.linqs.psl.model.rule..*Rule.*" />
        <Bug pattern="HE_EQUALS_NO_HASHCODE,HE_EQUALS_USE_HASHCODE" />
    </Match>

</FindBugsFilter>
